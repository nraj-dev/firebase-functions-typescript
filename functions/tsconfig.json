{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@autobot-aus/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
